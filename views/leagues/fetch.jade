block inputs
  .row.form-group
    .col-sm-2
      label league_key
    .col-sm-4
      input#league_key.form-control(type="text", placeholder="eg. 328.l.34014")
    .col-sm-6.desc
      p
        | League key format: {game_key}.l.{league_id}
  h4.spacing Subresources (optional)
  .row
    .col-sm-2
      label subresources
    .col-sm-4.checkbox-group
      label
        input(type="checkbox", name="settings")
        | settings
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="standings")
        | standings
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="scoreboard")
        | scoreboard
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="teams")
        | teams
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="draftresults")
        | draftresults
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="transactions")
        | transactions

